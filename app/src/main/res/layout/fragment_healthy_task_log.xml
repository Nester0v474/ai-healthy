<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddHealthyTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Создать список дел"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/primary"
            android:minHeight="64dp"
            android:layout_marginBottom="20dp"
            app:icon="@android:drawable/ic_menu_add"
            app:iconTint="@android:color/white"
            app:iconSize="28dp" />

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFilterAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Все"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary"
                android:minHeight="56dp"
                android:layout_marginBottom="8dp"
                app:cornerRadius="0dp"
                style="@style/Widget.Material3.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFilterActive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Активные"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary"
                android:minHeight="56dp"
                android:layout_marginBottom="8dp"
                app:cornerRadius="0dp"
                style="@style/Widget.Material3.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFilterCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выполненные"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary"
                android:minHeight="56dp"
                app:cornerRadius="0dp"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

        
        <TextView
            android:id="@+id/tvEmptyList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Нет записей"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone" />

        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHealthyTaskEntries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_healthy_task_entry" />

    </LinearLayout>

</ScrollView>

